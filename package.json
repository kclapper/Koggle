{
  "name": "Koggle",
  "description": "Boggle as a React component",
  "browserslist": "> 0.5%, last 2 versions, not dead",
  "main": "dist/package/Boggle.js",
  "type": "module",
  "types": "dist/package/Boggle.d.ts",
  "targets": {
    "package": {
      "source": "src/Boggle.jsx",
      "isLibrary": true,
      "context": "browser",
      "outputFormat": "esmodule"
    },
    "pages": {
      "source": "src/index.html",
      "isLibrary": false,
      "context": "browser",
      "outputFormat": "esmodule"
    }
  },
  "scripts": {
    "start": "parcel serve --target pages",
    "build": "npm run check && parcel build --target package",
    "build-pages": "npm run check && parcel build --target pages",
    "check": "tsc",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "license": "ISC",
  "devDependencies": {
    "@parcel/bundler-experimental": "^2.7.0",
    "@parcel/config-default": "^2.11.0",
    "@parcel/transformer-sass": "^2.9.3",
    "bootstrap-icons": "^1.10.5",
    "parcel": "^2.9.3",
    "process": "^0.11.10",
    "sharp": "^0.31.3",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "bootstrap": "^5.3.1",
    "react": "^18.2.0",
    "react-bootstrap": "^2.9.1",
    "react-dom": "^18.2.0"
  }
}
